<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table class="ui table">
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.user.name') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to t('action.show'), user %></td>
        <td><%= link_to t('action.edit'), edit_user_path(user) %></td>
        <td><%= link_to t('action.destroy'), user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('action.new'), new_user_path, class: "ui primary button " %>
