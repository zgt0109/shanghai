<p id="notice" class="ui message"><%= notice %></p>

<h1>Books List</h1>

<table class= "ui table">
  <thead>
    <tr>
      <th><%= Book.human_attribute_name(:title) %></th>
      <th><%= Book.human_attribute_name(:number) %></th>
      <th><%= Book.human_attribute_name(:amount) %></th>
      <th colspan="3"><%= t('action.options') %></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.number %></td>
        <td><%= book.amount %></td>
        <td><%= link_to t('action.show'), book, class: "ui small button blue" %></td>
        <td><%= link_to t('action.edit'), edit_book_path(book), class: "ui small button gray" %></td>
        <td><%= link_to t('action.destroy'), book, method: :delete, data: { confirm: 'Are you sure?' }, class: "ui small button red " %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('action.new'), new_book_path, class: "ui primary button" %>
