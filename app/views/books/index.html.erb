<p id="notice" class="ui message"><%= notice %></p>

<h1>Books Lista</h1>

<table class= "ui table">
  <thead>
    <tr>
      <th><%= Book.human_attribute_name(:title) %></th>
      <th><%= Book.human_attribute_name(:number) %></th>
      <th><%= Book.human_attribute_name(:amount) %></th>
      <th colspan="3"><%= t('books.index.options') %></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.number %></td>
        <td><%= book.amount %></td>
        <td><%= link_to 'Show', book, class: "ui small button blue" %></td>
        <td><%= link_to 'Edit', edit_book_path(book), class: "ui small button gray" %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, class: "ui small button red " %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Book', new_book_path, class: "ui primary button" %>
